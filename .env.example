# PostgreSQL Database Configuration
# Copy this file to .env and update with your actual credentials

# Database connection settings
PGHOST=localhost       # Database host (default: localhost)
PGPORT=5432            # PostgreSQL port (default: 5432)
PGDATABASE=fund_accounting_db  # Database name
PGUSER=npfadmin        # Database username
PGPASSWORD=your_secure_password_here  # Replace with actual password

# Application settings
NODE_ENV=development   # Environment (development, production, test)
PORT=3000              # API server port

# Optional settings
DEBUG=false            # Enable debug logging
SESSION_SECRET=replace_with_random_string  # For session encryption
